# EECAR Backend - Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Local Development - AWS Services
DYNAMODB_ENDPOINT=http://localhost:8000
S3_ENDPOINT=http://localhost:4566
SNS_ENDPOINT=http://localhost:4566

# DynamoDB
PARTS_TABLE_NAME=eecar-parts-table

# S3 Buckets
VECTORS_BUCKET_NAME=eecar-vectors-local
DOCUMENTS_BUCKET_NAME=eecar-documents-local

# SNS
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:eecar-notifications

# Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_REGION=us-east-1

# Feature Flags
ENABLE_COMPLIANCE_CHECK=true
ENABLE_SYNTHETIC_DATA=true
